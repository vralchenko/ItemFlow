{
  "name": "backend",
  "version": "1.0.0",
  "description": "The backend server for the ItemFlow project.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "start:test": "cross-env NODE_ENV=test tsx src/server.ts",
    "db:init": "tsx src/init-db.ts",
    "test:init-db": "rm -f ./test-database.sqlite && cross-env NODE_ENV=test tsx src/init-db.ts",
    "test:api": "playwright test",
    "test:ci": "npm run start:test & wait-on http://127.0.0.1:3001/health && npm run test:api"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tsx": "^4.16.2",
    "typescript": "^5.5.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.2",
    "@types/dotenv": "^8.2.0",
    "@types/sqlite3": "^3.1.11",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}