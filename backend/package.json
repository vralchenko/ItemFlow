{
  "name": "backend",
  "version": "1.0.0",
  "description": "The backend server for the ItemFlow project.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "dev:test": "cross-env NODE_ENV=test nodemon --watch 'src/**/*.ts' --exec 'tsx' src/server.ts",
    "db:init": "cross-env NODE_ENV=development tsx src/init-db.ts",
    "test:init-db": "rm -f ./test-database.sqlite && cross-env NODE_ENV=test tsx src/init-db.ts",
    "test:api": "playwright test"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "multer": "^2.0.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}